<html metal:use-macro="load: ../base.pt">

<div metal:fill-slot="content">
<h3>${request.title}</h3>
<hr>
<table id="table1" class="table ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kode</th>
            <th>Naskah</th>
            <th>SKPD</th>
            <th>Awal</th>
            <th>Akhir</th>
            <th>Jumlah Bayar</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
</div>
  <div metal:fill-slot="scripts">
    <script>
      var listUrl = "/reklame/transaksi";
      var mID;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = listUrl+"/grid/act";
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom"           : '<"toolbar">lfrtip',
          "sAjaxSource"    : oTableUrl,
          "bStateSave"     : true,
          "bServerSide"    : true,
          "bProcessing"    : true,
          "bScrollCollapse": true,
          "bSort"          : true,
          "bInfo"          : false,
          "bFilter"        : true,
          "bAutoWidth"     : false,
          "bPaginate"      : true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [
            {
                    "bSearchable": false,
                    "bVisible"   : false,
                    "aTargets"   : [0]
                },{
              "aTargets"   : [7], // Column number which needs to be modified
              "mRender"    : function (data, type, full) {
                  if (data == "0") {
                      return 'N';
                  } else if (data == "1") {
                      return 'Y';
                  }
              }
          }
            ],
          "aoColumns": [
              null,
              {"width": "70px"},
              null,
              {"width": "150px"},
              {"width": "100px"},
              {"width": "100px"},
              {"width": "80px", "sClass": "right"},
              {"width": "40px", "sClass": "center"},
          ]
        });
          
        var tb_array = [
          '<div class="btn-group pull-left">',
          '	<button id="btn_add"    class="btn btn btn-primary" type="button">Tambah</button>',
          '	<button id="btn_edit"   class="btn btn btn-primary" type="button">Edit</button>',
          '	<button id="btn_delete" class="btn btn btn-danger"  type="button">Hapus</button>',
          '	<button id="btn_print"  class="btn btn btn-primary" type="button">Cetak</button>',
          '	<button id="btn_close"  class="btn btn btn-warning" type="button">Tutup</button>',
          '	&nbsp;',
          '</div>',
        ];
 
		// Pencarian Kondisi, ketika data yang dicari itu bukan dari data table
/*        $('#table1_filter input').unbind();
        $('#table1_filter input').bind('keyup', function(e) {
            if(e.keyCode == 13) {
                oTable.fnFilter(this.value);   
            }else{
                var existingString = $("#table1_filter input").val();
                if (existingString.length > 1) {
                    var oTableUrl1 = listUrl+"/grid1/act?cari="+existingString;
                    oTable.fnReloadAjax(oTableUrl1);
                }else{
                    oTable.fnReloadAjax(oTableUrl);
                }
            }
        });
        */
        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);
                //mID = aData[0];
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                mID = aData[0];
                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');
                        /*oTable2.fnReloadAjax("egaji/grid2?id=" + mID);*/                
            }
        });
        
        $('#btn_add').click(function () {
            window.location = listUrl+'/add';
        });

        $('#btn_edit').click(function () {
            if (mID) window.location = listUrl+'/'+mID+'/edit';
            else alert('Pilih Baris yang akan di edit');
        });

        $('#btn_delete').click(function () {
            if (mID) window.location = listUrl+'/'+mID+'/delete';
            else alert('Pilih Baris yang akan di hapus');
        });

        $('#btn_print').click(function () {
            url = '/reklame/opreklame/report/act/transaksi?transaksi_id='+mID
			
			if (mID) window.open(url);
            else window.open('/reklame/opreklame/report/act/transaksi2');
            
        });

        $("#btn_close").click(function () {
            window.location = '/reklame';
            return false;
        });
        })
    </script>
</div>

</html>
